<html>
<head>
<title>Sonicraph</title>
<% if @sonic%>
  <meta property="fb:app_id" content="676721915713071" />
  <meta property="og:title" content="<%= @sonic.tags %>" />
  <meta property="og:description" content="A new dimension to photography" />
  <meta property="og:type" content="website" />
  <!--<meta property="og:url" content="https://sonicraph.herokuapp.com/sonicplayer.swf"/>-->
  <meta property="og:url" content="https://www.sonicraph.com/sonic?s=<%= params[:s]%>"/>
  <meta property="og:image" content="<%= @sonic.sonic_thumbnail %>"/>
  <meta property="og:site_name" content="Sonicraph"/>
<% end %>
<% if @isIphone %>
  <META http-equiv="refresh" content="0;URL=<%= @iphoneUrl%>">
<%end%>

<script src="http://code.jquery.com/jquery-2.1.0.min.js" type="text/javascript"></script>


<% content_width = "900px"%>
<style type="text/css">
  @font-face
  {
    font-family: HelveticaNeueLTPro45;
    src: url(HelveticaNeueLTPro-Lt.otf);
  }
  *{
    /*font-family: Arial, Helvetica, sans-serif !important;*/
    font-family: HelveticaNeueLTPro45;
  }
  body,html{
    background-color: #eee;
    margin: 0;
    padding: 0;
    text-align: center;
  }
  #header{
    height: 80px;
    /*background-image: url(/image/sonic_page_header.jpg);*/
    background-color: rgb(221, 90, 98);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }
  #header-inline{
    position: relative;
    width: <%= content_width%>;
    height: 100%;
    margin: auto;
  }
  #logo{
    width: 300px;
    position: absolute;
    left: 0px;
    bottom: 10px;
    text-align: left;
  }
  #logo img{
    width: 240px;
    height: auto;
  }
  #social{
    width: 300px;
    position: absolute;
    right: 0px;
    bottom: 10px;
    padding-right: 40px;
    text-align: right;
  }
  #social img{
    width: 30px;
    margin-left: 10px;
  }
  #content{
    width: <%= content_width%>;
    height: 600px;
    margin: auto;
    padding: 0;
    padding-top: 50px;
  }
  #content > div{
    float: left;
    margin: 0;
    padding: 0;
  }
  #profile{
    width: 260px;
    height: 100%;
    border-radius: 10px;
    box-sizing: border-box;
    /*padding-top: 30px !important;*/
    /*margin-right: 20px !important;*/
    /*border-width: 20px;*/
    /*border-color: #fff;*/
    /*border-style: solid;*/
    /*background-color: #fff;*/
    text-align: center;
  }
  /*#profile > div {*/
    /*float: left;*/
  /*}*/
  #profile_image{
    width: 80px;
    height:80px;
    background-image: url(/image/sonic_page_user_avatar_placeholder.png);
    background-repeat: no-repeat;
    background-size: cover;
    margin: auto;
    margin-top: 10px;
    border-radius: 80px;
  }
  #user_info {
    width: 100%;
    float: left;
    height: 90px;
    overflow: hidden;
    /*text-align: right;*/
  }
  #profile  h3{
    font-size: 18px;
    font-weight: normal;
    margin-bottom: 5px;
    color: #888;

  }
  #profile  h4 {
    font-size: 14px;
    margin-top: 0px;
    font-weight: normal;
    color: #aaa;
  }
  #profile  h5{
    margin-top: -12px;
    font-size: 12px;
    font-weight: normal;
    color: #ccc;
  }
  #sonic-container{
    width: 600px;
    height: 100%;
    border-radius: 5px;
    box-sizing: border-box;
    border-width: 10px;
    border-color: #fff;
    border-style: solid;
    background-color: #fff;
  }
  #player{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    /*border-radius: 15px;*/
    overflow: hidden;
    /*background-image: url(/image/640x640.jpg);*/
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
  }
  #footer{
    width: <%= content_width%>;
    text-align: center;
    margin: auto;
    margin-top: 50px;
    font-size: 12px;
    color: #999;
  }
  #footer_menu{
    width: 600px;
    list-style: none;
    margin: auto;
    text-align: center;
    padding: 0;
    margin-bottom: 10px;
    margin-left: 260px;
  }
  #footer_menu > li{
    /*float: left;*/
    margin-right: 20px;
    margin-left: 20px;
    display: inline-block;
  }
  #footer_menu a{
    color: #999;
    text-decoration: none;
  }
  #footer_menu a:hover{
    color: #bbb;
  }
  /*#trademark{*/
    /*padding: 0;*/
    /*clear: both;*/
    /*margin: auto;*/
  /*}*/
  #progress_bar{
    height: 3px;
    width: 0%;
    padding-top: 1px;
    padding-left: 1px;
    padding-right: 1px;
    background-color: #f00;
    background-clip: content-box;
    box-sizing: border-box;
  }
</style>
<script type="text/javascript">
  function loadSonic(sonicUrl){
    var player = $('#player').get(0);
    player.innerHTML = ' Loading ...';
    $.getJSON(sonicUrl, function(sonic) {
      player.innerHTML = '';
      var image = "data:image/jpeg;base64," + sonic.image;
      player.style.backgroundImage = "url("+image+")";
      audio = document.createElement('audio');
      var source = document.createElement('source');
      source.type = 'audio/mpeg';
      source.src = 'data:audio/mpeg;base64,' + sonic.sound;
      audio.appendChild(source);
      player.appendChild(audio);
      audio.play();
    });
  }

  $(document).ready(function(){
    <% if @sonic %>
      loadSonic("<%= @sonic.sonic_data%>");
      <% if @sonic.user.profile_image_file_name %>
      $("#profile_image").css({backgroundImage : "url(<%= @sonic.user.profile_image%>)"})
      <% end %>
    <% end %>
  });

  setInterval(function(){
    if(window['audio'])
    {
      var percentage = 100 * (audio.currentTime / audio.duration);
      $('#progress_bar').css({"width":"" + percentage+  "%"});
      if(audio.currentTime < 0.15)
      {
        audio.volume = 0;
      }
      else {
        audio.volume = 1;
      }
    }

  },20);

  var playerOnClick = function(){
    console.log("I'm here");
    if(audio.paused)
    {
      audio.play();
    }
    else
    {
      audio.pause();
    }

  };
</script>

</head>


<body>


<div id="header">
  <div id="header-inline">
    <div id="logo">
      <a href="/"><img src="/image/sonic_page_sonicraph_logo.png"></a>
    </div>
    <div id="social">
      <!--<a href="#"><img src="/image/sonic_page_facebook.png"></a>-->
      <a href="http://twitter.com/Sonicraph" target="_blank"><img src="/image/sonic_page_twitter.png"></a>
    </div>
  </div>
</div>

<div id="content">
  <div id="profile">
    <div id="profile_image">

    </div>
    <div id="user_info">
      <% if @sonic %>
        <h3><%= @sonic.user.fullname%></h3>
        <h4>@<%= @sonic.user.username%></h4>
        <h5><%= @sonic.user.location%></h5>
      <% end %>
    </div>
  </div>
  <div id="sonic-container">

    <% if @sonic %>

      <% if @isIphone %>
        <a href="<%= @iphoneUrl%>">Open in app</a>
      <% else %>
        <div id="player" onclick="playerOnClick();"></div>
      <%end%>

    <% else %>
      <strong>Sonic not found </strong>
    <% end%>

    <div id="progress_bar"></div>
  </div>
</div>

<div id="footer">
  <ul id="footer_menu">
    <li><a href="#">About Us</a></li>
    <li><a href="#">FAQ</a></li>
    <li><a href="#">Legal & Privacy</a></li>
    <li>@2014 Sonicraph</li>
  </ul>
  <!--<div id="trademark">@2014 Sonicraph</div>-->
</div>

</body>
</html>

