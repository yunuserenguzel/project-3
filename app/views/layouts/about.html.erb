<%
   lists = [
     {
       :title => "ABOUT",
       :items => [
         {
           :link => "company",
           :label => "What is Sonicraph?"
         },
         {
           :link => 'team',
           :label => 'Team'
         },
         {
           :link => "contact",
           :label => "Contact Us"
         }
       ]
     },
     {
       :title => "LEGAL",
       :items => [
         {
           :link => "terms",
           :label => "Terms"
         },
         {
           :link => "privacy",
           :label => "Privacy"
         }
       ]
     }
   ]
%>
<!DOCTYPE>
<html>
<head>
  <title>About | Sonicraph</title>

  <link rel="icon" type="image/png" href="/image/fav_icon_black_32x32.png" />
  <link rel="icon" type="image/png" href="/image/fav_icon_black_64x64.png" />
  <style type="text/css">

    @font-face {
      font-family: HelveticaNeueLTPro45;
      src: url(/HelveticaNeueLTPro-Lt.otf);
    }
    @font-face {
      font-family: OpenSansLight;
      src: url(/OpenSans-Light-webfont.ttf);
    }
    @font-face {
      font-family: OpenSansBold;
      src: url(/OpenSans-Bold-webfont.ttf);
    }

    *{
      /*font-family: Arial, Helvetica, sans-serif !important;*/
      font-family: OpenSansLight !important;
      box-sizing: border-box;
    }
    html, body {
      text-align: center;
      /*height: 100%;*/
      height: auto;
      margin: 0;
      padding: 0;
    }
    #page {
      margin: auto;
      text-align: left;
      width: 950px;
      height: auto;
      overflow: hidden;
    }
    #page > div {
      /*height: 100%;*/
    }
    #header {
      height: 85px;
      border-bottom: 2px solid #eee;
      padding-bottom: 20px;
    }
    #header-inline {
      position: relative;
      height: 100%;
      width: 950px;
      margin: auto;
      text-align: left;
    }
    #header-inline img {
      position: absolute;
      bottom: 0px;
      left: 10px;
      width: 250px;
      height: auto;
    }
    #menu {
      padding-top: 15px;
      float: left;
      width: 250px;
    }
    #menu > ul {
      list-style: none;
    }
    #menu li {
      height: 35px;
    }
    #menu li h4 {
      font-size: 21px;
      color: #aaa;
      font-family: OpenSansBold !important;
      border-bottom: 2px solid #eee;
    }
    #menu li.link {
      /*border: 1px solid #eee;*/
      /*border-right: 0;*/
    }
    #menu a {
      display: block;
      color: #666;
      height: 35px;
      line-height: 40px;
      padding-left: 10px;
      text-decoration: none;
      font-family: OpenSansLight !important;
    }
    #menu a.selected {
      font-weight: bold;
      color: #000;
    }
    #content {
      padding-top: 25px;
      padding-bottom: 40px;
      padding-left: 50px;
      border-left: 2px solid #eee;
      float: left;
      width: 650px;
      box-sizing: border-box;
      text-align: justify;
      color: #666;
      line-height: 30px;
      min-height: 100%;
      height: auto;
      overflow: hidden;
    }
    #footer {
      height: 120px;
      background-color: #f9f9f9;
      border-top: 2px solid #eeeeee;
      border-bottom: 2px solid #eeeeee;
      padding-top: 45px;
    }
    #footer strong {
      font-family: OpenSansBold !important;
    }
    #content a {
      text-decoration: none;
      font-weight: bold;
      color: #333;
    }
    #content a:hover {
      color: #666;
    }
  </style>

</head>
<body>

<div id="header">
  <div id="header-inline">
    <a href="/"><img src="/image/sonicraph_logo.png"></a>
  </div>
</div>
<div id="page">
  <div id="menu">
    <ul>
      <%
         lists.each do |list|
      %>
         <li><h4><%= list[:title]%></h4></li>
      <%
          list[:items].each do |item|
            selected = item[:link] == @link ? "selected" : ""
        %>
          <li class="link"><a href="/about/<%= item[:link] %>" class="<%= selected %>" ><%= item[:label] %></a></li>
        <%
          end
        end

      %>

    </ul>
  </div>
  <div id="content">
    <%= yield %>
  </div>
</div>

